# .bash_aliases file
# Vinicius Figueiredo <viniciusfs@gmail.com>


# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# $PROJECT_PATH is set on virtualenv activation
alias cdprj='cd $PROJECT_PATH'

alias t='todo.sh'

alias mame='$(which mame) -rp "/home/vinicius/Games/Arcade/roms" $1'

alias startvm='$(which VBoxManage) startvm -type headless Oitobits_Dev'

alias sshtunnel='$(ssh -c 3des -D 10081 oitobits.net)'
